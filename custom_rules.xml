<project name="abgcustom">
    <target name="test" description="Run Robolectric tests">
        <exec executable="ant" dir="tests/unit" failonerror="true">
            <arg line="clean test" />
        </exec>
    </target>

    <target name="cpd">
        <exec executable="scripts/runCpd.sh" failonerror="true" />
    </target>

    <target name="pmd">
        <exec executable="scripts/runPmd.sh" failonerror="true" />
    </target>

    <target name="lint">
        <exec executable="lint" failonerror="true">
            <arg line=". -Werror --exitcode" />
        </exec>
    </target>

    <target name="health" description="Runs all tasks to make sure the app is in the best state">
        <antcall target="clean" />
        <antcall target="debug" />
        <antcall target="lint" />
        <antcall target="cpd" />
        <antcall target="pmd" />
        <antcall target="test" />
    </target>
</project>
